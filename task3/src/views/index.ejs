<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Static files</title>
    <%- include('./partials/includeCss.ejs') %>
  </head>
  <header>
    <div class="authentification-box">
      <% if(!isLogIn){ %>
        <form method="get" action="/sing-up">
          <button class="auth-btn">Sing up</button>
        </form>
        <form method="get" action="/log-in">
          <button class="auth-btn">Log in</button>
        </form>
      <% }else{ %>
        <form method="post" action="/log-out">
          <button class="auth-btn">Log out</button>
        </form>
      <% } %>
    </div>
  </header>
  <body>
    <%- include('./partials/viewFilesDirectories.ejs') %>
  </body>
</html>
